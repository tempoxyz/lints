{
	"name": "@stripe/tempo-lints",
	"version": "0.1.0",
	"description": "Shared ast-grep lint rules for Tempo projects",
	"type": "module",
	"bin": {
		"tempo-lints": "./bin/tempo-lints.ts"
	},
	"files": [
		"bin/",
		"src/",
		"scripts/shared.ts",
		"scripts/post-pr-comment.ts",
		"action.yml"
	],
	"scripts": {
		"test": "npm run test:rust && npm run test:typescript && npm run test:shared-rules",
		"test:rust": "sg test --config src/rust/sgconfig.yml",
		"test:typescript": "sg test --config src/typescript/sgconfig.yml",
		"test:shared": "sg test --config src/shared/sgconfig.yml",
		"test:shared-rules": "vitest run",
		"test:update-snapshots": "sg test --config src/shared/sgconfig.yml --update-all && sg test --config src/rust/sgconfig.yml --update-all && sg test --config src/typescript/sgconfig.yml --update-all",
		"test:update-shared-snapshots": "sg test --config src/shared/sgconfig.yml --update-all",
		"check": "npm run typecheck && biome check --write --unsafe",
		"check:biome": "biome check --write --unsafe",
		"typecheck": "tsc --noEmit",
		"lint": "biome check",
		"release": "npm publish --provenance --access public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/stripe/tempo-lints.git"
	},
	"keywords": [
		"ast-grep",
		"linter",
		"lint",
		"rust",
		"typescript",
		"static-analysis"
	],
	"author": "Tempo Labs",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/stripe/tempo-lints/issues"
	},
	"homepage": "https://github.com/stripe/tempo-lints#readme",
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@types/node": "^22.10.0",
		"tsx": "^4.21.0",
		"typescript": "^5.7.3",
		"vitest": "^2.1.9"
	},
	"dependencies": {
		"@ast-grep/cli": "~0.25.0",
		"commander": "^12.1.0"
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "pnpm@9.15.4"
}
